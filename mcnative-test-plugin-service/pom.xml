<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>McNative</artifactId>
        <groupId>org.mcnative</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>mcnative-test-plugin-service</artifactId>
    <version>1.0.0</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.mcnative</groupId>
                <artifactId>mcnative-buildtool-maven</artifactId>
                <version>1.0.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>McNative</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <version>1.0.0</version>
                    <manifest>
                        <name>TestPlugin</name>
                        <category>Testing</category>
                        <version>1.0.0</version>
                        <main>org.mcnative.testplugin.service.TestPlugin</main>
                        <description>Demo and test plugin</description>
                        <website>https://mcnative.prematic.net</website>
                        <author>Davide Wietlisbach</author>

                        <depends>
                            <depend>DKBans</depend>
                            <depend>DKCoins</depend>
                        </depends>
                    </manifest>
                </configuration>
            </plugin>


        </plugins>
    </build>

    <dependencies>

        <!-- Internal project dependencies -->
        <dependency>
            <groupId>org.mcnative</groupId>
            <artifactId>mcnative-service</artifactId>
            <version>1.0.0</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.mcnative</groupId>
            <artifactId>mcnative-wrapper</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>

    </dependencies>

</project>