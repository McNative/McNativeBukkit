            <groupId>net.prematic.libraries</groupId>
            <artifactId>prematiclibraries-message</artifactId>
            <version>${dependency.pretronic.libraries.caching}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>net.prematic.libraries</groupId>
            <artifactId>prematiclibraries-synchronisation</artifactId>
            <version>${dependency.pretronic.libraries.synchronisation}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>net.prematic.libraries</groupId>
            <artifactId>prematiclibraries-logging</artifactId>
            <version>${dependency.pretronic.libraries.logging}</version>
            <scope>compile</scope>
